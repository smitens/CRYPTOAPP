{% extends 'base.twig' %}

{% block title %}Buy Cryptocurrency - CryptoApp{% endblock %}

{% block content %}
    <h1>Buy Cryptocurrency</h1>

    <h2>Top Currencies</h2>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Price (USD)</th>
        </tr>
        </thead>
        <tbody>
        {% for currency in topCurrencies %}
            <tr>
                <td>{{ currency.getName() }}</td>
                <td>{{ currency.getSymbol() }}</td>
                <td>${{ currency.getPrice() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form method="post" action="/buy">
        <label for="symbol">Symbol:</label>
        <input type="text" id="symbol" name="symbol" required>

        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" step="0.01" required>

        <button type="submit">Buy</button>
    </form>
{% endblock %}



