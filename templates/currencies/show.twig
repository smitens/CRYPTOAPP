{% extends 'currencies/base.twig' %}

{% block content %}
    <a href="/top-currencies">
        << Back to Top Currency List
    </a>
    <h1>Currency Information</h1>

    <p>Name: {{ cryptoData.name }}</p>
    <p>Symbol: {{ cryptoData.symbol }}</p>
    <p>Price: ${{ cryptoData.price }}</p>
    <p>Rank: {{ cryptoData.rank }}</p>

    <br />
    <form action="/top-currencies/{{ cryptoData.symbol }}/buy" method="POST">
        <div>
            <label for="amount">Amount</label>
            <input type="number" id="amount" name="amount" required />
        </div>
        <button type="submit">Buy</button>
    </form>

    <br />
    <form action="/top-currencies/{{ cryptoData.symbol }}/sell" method="POST">
        <div>
            <label for="amount">Amount</label>
            <input type="number" id="amount" name="amount" required />
        </div>
        <button type="submit">Sell</button>
    </form>

{% endblock %}
